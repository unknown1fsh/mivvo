# Vercel Environment Variables - PRODUCTION
# Bu dosyayı Vercel dashboard'da Environment Variables olarak ekleyin
# ⚠️  ÖNEMLİ: Bu değerler production için gerçek değerlerle değiştirilmelidir!

# Production Database (Vercel DB password: 12345)
DATABASE_URL="postgresql://username:12345@host/database"
DB_HOST="your-production-host"
DB_PORT="5432"
DB_USER="your-production-user"
DB_PASSWORD="12345"
DB_NAME="mivvo_expertiz_production"

# JWT Configuration (Production için güçlü key kullanın!)
JWT_SECRET="production-super-secret-jwt-key-change-this"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Server Configuration
NODE_ENV="production"
PORT="3001"

# Security
BCRYPT_ROUNDS="12"
SESSION_SECRET="production-session-secret-key"

# CORS Configuration
CORS_ORIGIN="https://your-domain.vercel.app"
CORS_CREDENTIALS="true"

# File Upload Configuration
MAX_FILE_SIZE="10485760"
UPLOAD_PATH="./uploads"
ALLOWED_IMAGE_TYPES="jpg,jpeg,png,webp"

# AI Services Configuration
OPENAI_API_KEY="your-production-openai-api-key"
AI_MODEL_VERSION="v1.0"
AI_PROCESSING_TIMEOUT="300000"

# Payment Configuration
PAYMENT_PROVIDER="iyzico"
IYZICO_API_KEY="your-production-iyzico-api-key"
IYZICO_SECRET_KEY="your-production-iyzico-secret-key"
IYZICO_BASE_URL="https://api.iyzipay.com"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-production-email@gmail.com"
SMTP_PASS="your-production-app-password"
FROM_EMAIL="noreply@mivvo.com"

# Redis Configuration (Production)
REDIS_URL="redis://production-redis-url"
REDIS_PASSWORD="your-redis-password"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Logging
LOG_LEVEL="error"
LOG_FILE="./logs/app.log"

# External APIs
GOOGLE_MAPS_API_KEY="your-production-google-maps-api-key"
VEHICLE_API_KEY="your-production-vehicle-api-key"
