{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "src": "/_next/static/(.*)",
      "dest": "/frontend/_next/static/$1"
    },
    {
      "src": "/_next/webpack-hmr",
      "dest": "/frontend/_next/webpack-hmr"
    },
    {
      "src": "/reports/(.*)",
      "dest": "/frontend/reports/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}