{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/dist/**", "backend/prisma/schema.prisma", "backend/node_modules/.prisma/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "installCommand": "npm install --prefix frontend && npm install --prefix backend && cd backend && npx prisma generate",
  "buildCommand": "npm run build --prefix frontend && npm run vercel-build --prefix backend",
  "env": {
    "NODE_ENV": "production"
  }
}